# Discord Bot Credentials
# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Auto-monitor: Set to 'true' to automatically join when users enter voice channels
# Set to 'false' to only join via !monitor command
AUTO_MONITOR=false

# Log all transcripts: Set to 'true' to log ALL voice messages (not just violations)
# This will send every transcription to #voice-logs or #transcripts channel
# Warning: This can be very spammy!
LOG_ALL_TRANSCRIPTS=false

